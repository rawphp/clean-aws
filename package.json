{
  "name": "clean-aws",
  "description": "CLI tool to clean AWS environments",
  "version": "0.0.5",
  "main": "index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:rawphp/clean-aws.git"
  },
  "scripts": {
    "build": "./scripts/build",
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "clean": "rm -Rf dist",
    "setup": "yarn run build && cd ./dist && npm uninstall -g && npm install -g .",
    "release": "npm publish .",
    "preversion": "yarn lint && yarn build && yarn test && changelog-verify CHANGELOG.md",
    "version": "yarn build && version-changelog CHANGELOG.md && changelog-verify CHANGELOG.md && git add CHANGELOG.md"
  },
  "engines": {
    "node": ">=8.10.0"
  },
  "bin": {
    "clean-aws": "./bin/clean-aws.js"
  },
  "dependencies": {
    "aws-sdk": "^2.468.0",
    "bluebird": "^3.5.5",
    "colors": "^1.3.3",
    "commander": "^2.20.0",
    "fs-extra": "^7.0.1",
    "prompt-confirm": "^2.0.4",
    "semver": "^6.1.1"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.27",
    "@types/fs-extra": "^7.0.0",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.10",
    "aws-sdk-mock": "^4.4.0",
    "changelog-verify": "^1.1.2",
    "jest": "^23.6.0",
    "nock": "^10.0.6",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1",
    "version-changelog": "^3.1.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": null,
    "verbose": true,
    "collectCoverageFrom": [
      "src/**/*"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/src/bin",
      "<rootDir>/src/__tests__"
    ],
    "coverageReporters": [
      "html",
      "text",
      "text-summary",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 85,
        "lines": 85,
        "functions": 80
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testRegex": "(\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/*",
      "<rootDir>/src/bin/*.ts"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
